#!/bin/bash

# script variables
NOMP_SOURCE_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
NOMP_DEFAULT_PROMPT=""
NOMP_LNSTATE_PATH="${NOMP_SOURCE_DIR}/.lnstate"
NOMP_SHELL_CONFIG_FILE=""

# colors
red=$(tput setaf 1)
green=$(tput setaf 2)
cyan=$(tput setaf 6)
reset=$(tput sgr0)

# read state variables of lncfg
if [[ -f "${NOMP_LNSTATE_PATH}" ]]; then
  source "${NOMP_LNSTATE_PATH}"
else
  echo "${red}You should run ./lncfg before running ./${0}${reset}"
  exit 1
fi
NOMP_BIN_PATH="${NOMP_INSTALL_DIR}/bin"

# check the shell config file
if [[ -f ~/.bashrc ]]; then
  NOMP_SHELL_CONFIG_FILE="${HOME}/.bashrc"
elif [[ -f ~/.zshrc ]]; then
  NOMP_SHELL_CONFIG_FILE="${HOME}/.zshrc"
fi

function update_bashrc() {
  [[ -n ${NOMP_SHELL_CONFIG_FILE} ]] &&
    echo -e "${NOMP_ENVIRONMENT}" >>"${NOMP_SHELL_CONFIG_FILE}" &&
    echo "${green}Successfully exported variables to ${NOMP_SHELL_CONFIG_FILE}${reset}"
}

function print_help() {
  echo -e "Usage: ${0} [-h|--help] [-y|--yes] [-n|--no]\n" \
    "${cyan}-h/--help:${reset} Print help for libnomp install.\n" \
    "${cyan}-y/--yes:${reset} Yes to all prompts.\n"
    "${cyan}-n/--no:${reset} No to all prompts.\n"
}

# check for default prompt
if [[ $# -gt 0 ]]; then
  case $1 in
    -h | --help) print_help  && exit 0 ;;
    -y | --yes) NOMP_DEFAULT_PROMPT="y" ;;
    -n | --no) NOMP_DEFAULT_PROMPT="n" ;;
    *) echo "${red}Invalid argument: ${1}${reset}."
    echo "See ${cyan}./${0} -h${reset} or ${cyan}./${0} --help${reset} for the accepted commands."
    exit 1 ;;
  esac
fi

# installing libnomp
NOMP_INSTALL_SUCCESS=false
cmake --build "${NOMP_BUILD_DIR}" --target install &&
  NOMP_INSTALL_SUCCESS=true

if [[ ${NOMP_INSTALL_SUCCESS} = true ]]; then
  echo "${green}Successfully installed libnomp${reset}"
  echo "See ${cyan}lnrun -h${reset} or ${cyan}lnrun --help${reset} for available commands"

  [[ ${NOMP_DEFAULT_PROMPT} = "n" ]] && exit 0
  NOMP_ENVIRONMENT=""

  # add nomp install dir to env
  { grep -xFq "export NOMP_INSTALL_DIR=${NOMP_INSTALL_DIR}" "${NOMP_SHELL_CONFIG_FILE}" ||
    NOMP_ENVIRONMENT="# Setup nomp environment variables\nexport NOMP_INSTALL_DIR=${NOMP_INSTALL_DIR}\n"; }

  # add lnrun script to path
  { grep -xFq "export PATH=${NOMP_BIN_PATH}:\${PATH}" "${NOMP_SHELL_CONFIG_FILE}" ||
    NOMP_ENVIRONMENT+="export PATH=${NOMP_BIN_PATH}:\${PATH}\n"; }

  # set the libnomp env variables if not
  if [[ -n ${NOMP_ENVIRONMENT} ]]; then
    [[ ${NOMP_DEFAULT_PROMPT} = "y" ]] && update_bashrc && exit 0
    read -p "Do you wish to add libnomp variables to .bashrc? [Y|n]: " -n 1 -r
    echo
    [[ $REPLY =~ ^[Yy]$ ]] && update_bashrc
    exit 0
  fi
else
  echo "${red}Failed to install libnomp${reset}"
  exit 1
fi
